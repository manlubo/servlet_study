<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="mapper.AttachMapper">
 	<!-- 첨부파일 추가 -->
 	<insert id="insert">
	 	insert into tbl_attach(uuid , origin, path, image, odr, bno) values (#{uuid} , #{origin}, #{path}, #{image}, #{odr}, #{bno})
 	</insert>
 	
 	
 	<!-- 첨부파일 삭제 -->
 	<delete id="delete">
 		DELETE from tbl_attach where uuid = #{uuid};
 	</delete>
 	
 	<delete id="deleteByBno">
 		DELETE from tbl_attach where bno = #{bno};
 	</delete>
 	
 	<!-- 첨부파일 선택 -->
 	<select id="selectOne" resultType="attach">
 		SELECT * from tbl_attach where rno = #{rno}
 	</select>
 	
 	<!-- 첨부파일 목록 조회 -->
 	<select id="list" resultType="attach">
 		SELECT * from tbl_attach where bno = #{bno} order by odr
 	</select>
 	
 	
 	
 </mapper>